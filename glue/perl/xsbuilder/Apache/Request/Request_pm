use strict;
use warnings FATAL => 'all';

package Apache::Request::Table;
use base 'APR::Table';
sub value_class { undef }

package Apache::Request;
push our(@ISA), __PACKAGE__ -> env;

sub table_class { 'Apache::Request::Table' }

sub new {
    my $class = shift;
    my $env = shift;
    my $req = $class->request($env);
    $req->config(@_);
    return $req;
}
