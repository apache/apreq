use APR::Table;
use APR::Bucket;
use APR::Brigade;

package Apache::Request::Table;
push our(@ISA), 'APR::Table';

package Apache::Request;
push our(@ISA), __PACKAGE__ -> env;

sub new {
    my $class = shift;
    my $env = shift;
    my $req = $class->request($env);
    $req->config(@_);
    return $req;
}
